<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linearLayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/user_2"
            android:id="@+id/doctorInfo_photoID" />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/doctorInfo_photoID"
            android:layout_alignTop="@id/doctorInfo_photoID"
            android:layout_alignBottom="@id/doctorInfo_photoID"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="1.3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/doctorInfo_photoID"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/doctorInfo_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:textSize="13sp"
                    android:id="@+id/doctorInfo_position"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/doctorInfo_name" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/doctorInfo_photoID"
                    android:text="接诊量  "
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/userMes_name_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:textSize="10sp"
                    android:id="@+id/doctorinfo_num"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/doctorInfo_name" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userMes_hospital"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:text="擅长： "
                    android:layout_below="@+id/doctorInfo_name"
                    android:layout_toRightOf="@id/doctorInfo_photoID"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="17"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="10sp"
                    android:id="@+id/doctorInfo_disease"
                    android:layout_alignBottom="@id/textView7"
                    android:layout_toEndOf="@+id/textView7" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@id/lin"
            android:layout_alignTop="@id/lin"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview"
                android:textColor="@color/white"
                android:text="预约"/>

        </LinearLayout>



    </RelativeLayout>



</LinearLayout>
